[user]
	email = asif.talybov@eltex.loc
	name = Асиф Талыбов
[alias]
	st = status --untracked-files=no
	co = checkout
	br = branch
	ci = commit
	hist = log  --author='Асиф Талыбов' --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	remind = hist
	gst = status --untracked-files=no
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[pager]
	diff = diff-so-fancy | less --tabs=4 -RFXS --pattern '^(Date|added|deleted|modified): '
